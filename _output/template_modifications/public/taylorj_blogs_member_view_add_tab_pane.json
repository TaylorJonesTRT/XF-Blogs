{
    "template": "member_view",
    "description": "Add the \"blog posts\" tab pane.",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<!--[XF:tab_panes:after_recent_content]-->",
    "replace": "$0\n\n<xf:if is=\"$xf.visitor.canViewBlogs() AND $user.taylorj_blogs_blog_post_count\">\n\t<li data-href=\"{{ link('blogs/authors', $user) }}\" role=\"tabpanel\" aria-labelledby=\"blogs\">\n\t\t<div class=\"blockMessage\">{{ phrase('loading...') }}</div>\n\t</li>\n</xf:if>"
}